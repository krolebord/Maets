@model Maets.Models.Dtos.Companies.CompanyReadDto

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete company</h1>

<h3>Are you sure you want to delete this company?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Company</dt>
        <dd class="col-sm-10">
            <img src="@Model.PhotoUrl" alt="avatar" class="avatar"/>
            @Model.Name
        </dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>

        <dt class="col-sm-2"># Employees</dt>
        <dd class="col-sm-10">
            @Model.EmployeesCount
        </dd>

        <dt class="col-sm-2"># Published apps</dt>
        <dd class="col-sm-10">
            @Model.PublishedAppsCount
        </dd>

        <dt class="col-sm-2"># Developed apps</dt>
        <dd class="col-sm-10">
            @Model.DevelopedAppsCount
        </dd>
    </dl>

    <partial name="_BackToIndexPartial"/>
    <form asp-action="Delete" class="d-inline-block">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
