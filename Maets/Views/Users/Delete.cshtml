@using Maets.Extensions
@model Maets.Models.Dtos.Users.UserReadDto

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete user</h1>

<h3>Are you sure you want to delete this user?</h3>
<hr/>
<div>
    <dl class="row">
        <dd class="col-sm-6">
            <img src="@Model.AvatarUrl" alt="avatar" class="avatar"/>
            @Html.DisplayNameFor(model => model.UserName)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayFor(model => model.Id)
        </dt>
    </dl>

    <partial name="_BackToIndexPartial"/>
    @if (User.GetId() != Model.Id)
    {
        <form asp-action="Delete" class="d-inline-block">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    }
</div>
