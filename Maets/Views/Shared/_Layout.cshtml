<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Maets - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/vendor.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Maets.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand position-md-absolute" style="left: 1rem; font-size: 1.5rem" asp-area="" asp-controller="Store" asp-action="Index">
                <i class="fas fa-cubes"></i> Maets
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-collapse" aria-controls="navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" id="navbar-collapse">
                <partial name="_NavMenuPartial"/>
                <div class="position-md-absolute" style="right: 1rem">
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2022 - <a asp-area="" asp-controller="About" asp-action="Index">Maets</a> - <a asp-area="" asp-controller="About" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/js/vendor.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
