@using Microsoft.AspNetCore.Identity
@using Maets.Extensions
@using Maets.Domain.Entities.Identity
@inject SignInManager<ApplicationUser> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown d-flex">
            <a class="nav-link d-flex flex-row flex-nowrap align-items-center py-0"
               asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <img src="@User.GetAvatarUrl()" alt="user avatar" class="avatar me-1"/>
                @User.Identity?.Name
            </a>
            <ul class="dropdown-menu" style="margin-top: 32px">
                <li>
                    <form class="form-inline dropdown-item" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Store", new { area = "" })">
                        <button type="submit" class="nav-link btn btn-link text-light">Logout</button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
